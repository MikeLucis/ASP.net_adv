@model IEnumerable<ASP.NET_src.Models.TeacherUser>

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-cn">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/static/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/static/css/simplemde.min.css" />
    <link rel="stylesheet" href="~/static/css/accounts.css" />
    <link rel="stylesheet" href="~/static/css/app.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap" rel="stylesheet">
    <title>TeacherInfo</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center logo my-4">
            <a href="/Home">My MVC</a>
        </h1>
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-6 col-sm-8">
                <p>
                    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary btn-block" })
                </p>
                <div class="text-center table-responsive">
                    <table border="1" class="table table-bordered table-hover table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TeacherNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TeacherName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProfessionalTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QQ)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telephone)
                            </th>
                            <th>更改</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TeacherNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TeacherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProfessionalTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QQ)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telephone)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
