@model ASP.NET_src.Models.TeacherUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/static/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/static/css/simplemde.min.css" />
    <link rel="stylesheet" href="~/static/css/accounts.css" />
    <link rel="stylesheet" href="~/static/css/app.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap" rel="stylesheet">
    <title>TeacherRegister</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center logo my-4"><a href="/Home">My MVC</a></h1>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">TeacherRegister</h3>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" />
                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary()

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TeacherNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.TeacherNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TeacherNumber, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">必填。50个字符或者更少。包含字母，数字和仅有的AT/./+/-/_符号。</small>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TeacherName, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">必填。50个字符或者更少。包含汉字, 字母，数字和仅有的AT/./+/-/_符号。</small>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">
                                        <ul>
                                            <li>你的密码不能与你的其他个人信息太相似。</li>
                                            <li>你的密码必须包含至少 8 个字符。</li>
                                            <li>你的密码不能是一个常见密码。</li>
                                            <li>你的密码不能全都是数字。</li>
                                        </ul>
                                    </small>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">必填。1个字符</small>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ProfessionalTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.ProfessionalTitle, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ProfessionalTitle, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">必填。50个字符或者更少。包含汉字, 字母，数字和仅有的AT/./+/-/_符号。</small>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">必填。50个字符或者更少。包含字母，数字和仅有的AT/./+/-/_符号。</small>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.QQ, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.QQ, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.QQ, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div>
                                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                    </div>
                                    <small class="form-text text-muted">必填。50个字符或者更少。只包含数字。</small>
                                </div>

                                <div class="form-group">
                                    <div>
                                        <input type="submit" value="Create an Account" class="btn btn-primary btn-block" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer text-muted text-center">
                        @Html.ActionLink("Back to List", "Index") <br />
                        <p style="color: rebeccapurple;">@ViewBag.msg</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/static/js/bootstrap.min.js"></script>
    <script src="~/static/js/jquery-3.5.1.min.js"></script>
    <script src="~/static/js/popper.min.js"></script>
    <script src="~/static/js/simplemde.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
